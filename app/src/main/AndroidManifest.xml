<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ara.sunflowerorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SalesOrder"
            android:label="@string/sales_order" />
        <activity
            android:name=".OrderItem"
            android:label="@string/add_order_item" />
        <activity android:name=".SearchHelper" />
        <activity
            android:name=".DeliveryActivity"
            android:label="@string/delivery" />
        <activity android:name=".ListHelperActivity" />
        <activity
            android:name=".DeliveryItemActivity"
            android:label="@string/delivery_item_title" />
        <activity android:name=".CommentActivity" />
        <activity
            android:name=".CollectionActivity"
            android:label="@string/collection_title" />
        <activity android:name=".InvoceItemActivity" />
        <activity
            android:name=".DeliveryReportActivity"
            android:label="@string/delivery_report" />
        <activity
            android:name=".SalesOrderReportActivity"
            android:label="@string/sales_order_report" />
        <activity
            android:name=".CollectionReportActivity"
            android:label="@string/collection_report" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".MultiOrderActivity"></activity>
    </application>

</manifest>